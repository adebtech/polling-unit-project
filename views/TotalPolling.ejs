<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Local Government Results</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css"
      integrity="sha512-jnSuA4Ss2PkkikSOLtYs8BlYIeeIK1h99ty4YfvRPAlzr377vr3CXDb7sb7eEEBYjDtcYj+AjBH3FLv5uSJuXg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="#">Your Logo</a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" href="/total/lga">LGA Results</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/store">Store result</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <div class="container">
      <h1 class="mt-5">Local Government Results</h1>
      <!-- Local Government Selection -->
      <div class="mb-3">
        <label for="localGovernmentSelect" class="form-label"
          >Select Local Government:</label
        >
        <select class="form-select" id="localGovernmentSelect">
          <option selected disabled>Select Local Government</option>
          <% lgaList.forEach(function(lga) { %>

          <option
          <% if(lga.lga_id == result.lga_id){ %>selected <% } %>
            value="<%= lga.lga_id %>"
          >
            <%= lga.lga_name %>
          </option>
          <% }) %>
          <!-- Add more options for other local governments -->
        </select>
      </div>
      <!-- Total Score Section -->
      <div class="card mt-3">
        <div class="card-header">
          Total Result for Selected Local Government
        </div>
        <div class="card-body">
          <h5 class="card-title">Total Score</h5>
          <p class="card-text"><%= result.total %></p>
          <!-- Total score value -->
        </div>
      </div>
      <a href="/" class="btn btn-primary mt-3"
        >Back to Home</a
      >
    </div>
    <!-- Bootstrap JS (Optional) -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.min.js"
      integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script>
      document
        .getElementById("localGovernmentSelect")
        .addEventListener("change", function (e) {
          e.preventDefault();
          // Get the value of the selected option
          var selectedLocalGov = this.value;
          // Reload the page with the selected local government as a query parameter
          window.location.href = "/total/lga?id=" + selectedLocalGov;
        });
    </script>
  </body>
</html>
